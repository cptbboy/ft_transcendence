// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
	provider = "prisma-client-js"
	binaryTargets = ["native", "debian-openssl-1.1.x"]
}

datasource db {
	provider = "postgresql"
	url      = env("DATABASE_URL")
}

model users {

	id				Int		@id @default(autoincrement()) //unique identifier
	username		String	@unique
	intra_name		String	@unique
	profile_picture	String?
	twoFactorSecret	String?
	friends			Int[]
	blocks			Int[]

}

model games {

	id		Int			@id @default(autoincrement())
	player1	Int
	player2	Int			//player IDs
	score1	Int
	score2	Int
	ranked	Boolean		//ranked yes or no
	begin	DateTime	//Date or Datetime when game took place?
	end		DateTime	//Date or Datetime when game took place?

}

model stats {

	id		Int	@id @default(autoincrement())	//is player id
	played	Int	@default(0) 					//calc from other tables
	wins	Int	@default(0)
	score	Int	@default(0)

}

model achievements {
	id			Int		@id @default(autoincrement())
	player_ids	Int[]	//users that have this achievement
	name		String
	description	String
}
